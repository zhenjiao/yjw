<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:clickable="false">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/deal_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Black" />
        <!-- android:text="东方曼哈顿三房" -->

        <TextView
            android:id="@+id/deal_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black" />
        <!-- android:text="12月4日" -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/deal_item_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black" />
        <!-- android:text="童先明推荐" -->

        <TextView
            android:id="@+id/deal_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black" />
        <!-- android:text="介绍新客户2元  成功200元" -->

        <LinearLayout
            android:id="@+id/confirm_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:visibility="gone" >

            <Button
                android:id="@+id/bt_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接受" />

            <Button
                android:id="@+id/bt_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒绝" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>